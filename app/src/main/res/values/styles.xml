<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- =========================================================
         1. Base Typography (폰트, 줄간격 공통)
    ========================================================== -->
    <style name="App_Text_Base">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:fontFamily">@font/noto_sans_kr</item>
    </style>

    <!-- =========================================================
         2. Role 기반 텍스트 스타일
    ========================================================== -->
    <style name="App_Text_Title" parent="App_Text_Base">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="App_Text_SubTitle" parent="App_Text_Base">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="App_Text_Body" parent="App_Text_Base">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="App_Text_Caption" parent="App_Text_Base">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:fontFamily">@font/noto_sans_light</item>
    </style>

    <style name="App_Text_Button" parent="App_Text_Base">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>


    <!-- =========================================================
         3. Button 공통 스타일
    ========================================================== -->
    <style name="App_Button_Base" parent="App_Text_Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingVertical">@dimen/button_padding_vertical</item>
        <item name="android:paddingHorizontal">@dimen/button_padding_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="App_Button_Positive" parent="App_Button_Base">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_positive_selector</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="App_Button_Negative" parent="App_Button_Base">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/btn_negative_selector</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>


</resources>
