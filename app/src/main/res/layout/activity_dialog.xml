<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:minWidth="312dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_text"
        style="@style/App_Text_SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp"
        android:layout_marginHorizontal="20dp"
        android:text="@null"
        android:gravity="start|center"
        />

    <!-- 내용 -->
    <TextView
        android:id="@+id/dialog_message_text"
        style="@style/App_Text_Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="50dp"
        android:text="@null"
        android:gravity="center"
        />

    <!-- 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_negative_btn"
            style="@style/App_Button_Negative"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/btn_negative"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_positive_btn"
            style="@style/App_Button_Positive"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/btn_positive"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>

</LinearLayout>